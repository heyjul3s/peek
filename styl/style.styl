
.peek-container {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: 40px 0;
}


.peek {
    background-color: purple;
    height: 420px;
    transition: transform 500ms ease-out;
    transform: translate3d(0, 0, 0);
    white-space: nowrap;
}

.slide {
    float: left;
	display: block;
    margin: 0;
    padding: 0;
    height: 100%;
    transition: transform 400ms ease-out;
    transform translateX(100%)

    position absolute
    top 0
    left 0
    width 100%

    &.item-1 {
        background-color red
    }

    &.item-2 {
        background-color orange
    }

    &.item-3 {
        background-color yellow
    }

    &.item-4 {
        background-color green
    }

    &.item-5 {
        background-color blue
    }
}

.peek-dots
    position relative
    width 100%
    padding 40px 0
    background pink
    text-align center
    z-index 1

    .peek-dot
        display inline-block
        position relative
        width 26px
        height 26px
        margin 0 5px
        background-color black
        border-radius 50%
        cursor pointer

        transform scale(1)
        transition transform 200ms ease-out

        &::before,
        &::after
            content ''
            display block
            position absolute
            top 10%
            width 80%
            height 80%
            left 10%
            background-color red
            border-radius 50%

        &.dot-current
            transform scale(1.2)

.slide-btn-nav
    position absolute
    width 100%
    height calc(100% - 80px)
    top 40px

    a
        display block
        position absolute
        top 0
        width 15%
        height 100%
        cursor pointer

        &.prev-btn
            left 0

        &.next-btn
            right 0


.selected
    transform translateX(0)
