body
    margin 0


.peek-container {
    position: relative
    width: 100%
    height 100vh
    overflow: hidden
}

.peek {
    height 100%
    transition transform 500ms ease-out
    transform translate3d(0, 0, 0)
    white-space: nowrap
}

.slide {
	display: block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    margin 0
    padding 0
    transition transform 400ms ease-out, opacity 500ms ease-out
    transform translateX(100%)
    opacity 0

    &::before,
    &::after {
        content ''
        display block
        position absolute
        top 0
        left 0
        width 100%
        height 100%
    }

    &::before {

    }

    &::after {
        background rgba(0, 0, 0, 0.15)
        background -moz-radial-gradient(center, ellipse cover, rgba(0, 0, 0, 0.35) 0%, rgba(0, 0, 0, 0) 100%)
        background -webkit-radial-gradient(center, ellipse cover,rgba(0, 0, 0, 0.35) 0%,rgba(0, 0, 0, 0) 100%)
        background radial-gradient(ellipse at center, rgba(0, 0, 0, 0.35) 0%,rgba(0, 0, 0, 0) 100%)
    }

    &.item-1 {
        background hotpink url(../assets/images/birdcage.jpg) 50% 50% no-repeat
        background-size cover
    }

    &.item-2 {
        background-color orange
    }

    &.item-3 {
        background-color yellow
    }

    &.item-4 {
        background-color green
    }

    &.item-5 {
        background-color blue
    }

    .slide-content {
        display block
        position absolute
        top 50%
        left 50%
        width 65%
        transform translate(150%, -50%)
        text-align center
        transition transform 800ms ease-out, opacity 800ms ease-out
        word-wrap break-word
        white-space normal
        color white
        z-index 2

        @media ( min-width: 768px ) {
            width 50%
        }

        h1 {
            margin 0
            font-weight bold
        }

        p {
            line-height 1.3
        }
    }
}

.peek-dots
    position absolute
    bottom 0
    left 0
    width 100%
    padding 60px 0
    text-align center
    z-index 1

    .peek-dot
        display inline-block
        position relative
        width 16px
        height 16px
        margin 0 10px
        border-radius 50%
        cursor pointer
        transition transform 300ms ease-out, background-color 300ms ease-out
        background-color rgba(0, 0, 0, 0.15)
        box-shadow 1px 1px 10px 0 rgba(0, 0, 0, 0.05)

        &::before,
        &::after
            content ''
            display block
            position absolute
            border-radius 50%

        &::before
            top 0
            left 0
            width 100%
            height 100%
            box-shadow inset 0 0 0 40px rgba(0, 0, 0, 0.05)
            transition box-shadow 300ms ease-out

        &::after
            top 10%
            left 10%
            width 80%
            height 80%
            background-color rgba(0, 0, 0, 0.25)
            transform scale(0)
            opacity 1
            transition transform 200ms ease-out, opacity 400ms ease-out, background-color 400ms ease-out

        .highlight
            display block
            position absolute
            top calc(50% - 4px)
            left calc(50% - 4px)
            width 8px
            height 8px
            background-color white
            border-radius 50%
            transform scale(0)
            transition transform 300ms ease-out

        &.dot-current
            transform scale(1.15)
            background-color rgba(0, 0, 0, 0.25)

            &::before
                // transition-delay 200ms
                box-shadow inset 0 0 0 3px rgba(0, 0, 0, 0.05)

            &::after
                transform scale(1)
                opacity 0

            .highlight
                transform scale(1)

.slide-btn-nav
    position absolute
    width 100%
    height calc(100% - 80px)
    top 40px

    a
        display block
        position absolute
        top calc(50% - 40px)
        width 80px
        height 80px
        border-radius 50%
        cursor pointer
        transition transform 400ms ease-out
        transform scale(0.7)

        &::before,
        &::after
            content ''
            display block
            position absolute
            width 20px
            height 4px
            background-color rgba(255, 255, 255, 1)
            box-shadow 1px 1px 10px 0 rgba(0, 0, 0, 0.05)
            z-index 1
            transition transform 300ms ease-out

        &:hover
            span
                &::before
                    transition-delay 200ms
                    box-shadow inset 0 0 0 6px rgba(0, 0, 0, 0.05)

                &::after
                    transform scale(1)
                    opacity 0

        &:active
            span
                &::before
                    box-shadow inset 0 0 0 40px rgba(0, 0, 0, 0.25)

        @media ( min-width: 768px )
            transform scale(1)

        span
            content ''
            display block
            position absolute
            top calc(50% - 30px)
            left calc(50% - 30px)
            width 60px
            height 60px
            border-radius 50%
            pointer-events none
            background-color rgba(0, 0, 0, 0.15)
            opacity 0.5
            transition background-color 400ms ease-out, opacity 300ms ease-out

            &::before,
            &::after
                content ''
                display block
                position absolute
                width 100%
                height 100%
                border-radius 50%

            &::before
                box-shadow inset 0 0 0 40px rgba(0, 0, 0, 0.05)
                transition box-shadow 300ms ease-out

            &::after
                background-color rgba(0, 0, 0, 0.25)
                transform scale(0)
                opacity 1
                transition transform 200ms ease-out, opacity 400ms ease-out, background-color 400ms ease-out

        &.prev-btn
            left 0

            &::before,
            &::after
                left calc(50% - 10px)

            &::before
                top calc(50% - 8px)
                transform  translate(0, 0) rotate(-45deg)

            &::after
                top calc(50% + 4px)
                transform translate(0, 0) rotate(45deg)

            &:active
                transform scale(0.95)

            &:hover
                &::before
                    transform translate(0, 0) rotate(-40deg)

                &::after
                    transform translate(0, -1px) rotate(40deg)

            @media ( min-width: 768px )
                left 40px



        &.next-btn
            right 0

            &::before,
            &::after
                right calc(50% - 10px)

            &::before
                top calc(50% - 8px)
                transform translate(0, 0) rotate(45deg)

            &::after
                top calc(50% + 4px)
                transform translate(0, 0) rotate(-45deg)

            &:active
                transform scale(0.95)

            &:hover
                &::before
                    transform translate(0, 0) rotate(40deg)

                &::after
                    transform translate(0, -1px) rotate(-40deg)

            @media ( min-width: 768px )
                right 40px


.selected
    transform translateX(0)
    opacity 1

    .slide-content
        transition-delay 300ms
        transform translate(-50%, -50%)
        opacity 1
