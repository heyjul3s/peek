
.peek
    height 200px
    transition transform 500ms ease-out
    transform translate3d(0, 0, 0)

    .slide
        &.item-1
            background-color red

        &.item-2
            background-color orange

        &.item-3
            background-color yellow

        &.item-4
            background-color green

        &.item-5
            background-color blue
