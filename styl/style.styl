
.peek-container {
    position: relative;
    width: 100%;
    overflow: hidden;
}


.peek {
    height: 420px;
    transition: transform 500ms ease-out;
    transform: translate3d(0, 0, 0);
    white-space: nowrap;
}

.slide {
    float: left;
	display: block;
    margin: 0;
    padding: 0;
    height: 100%;
    transition: transform 400ms ease-out;
    transform translateX(100%)

    position absolute
    top 0
    left 0
    width 100%

    &.item-1 {
        background-color hotpink
    }

    &.item-2 {
        background-color orange
    }

    &.item-3 {
        background-color yellow
    }

    &.item-4 {
        background-color green
    }

    &.item-5 {
        background-color blue
    }
}

.peek-dots
    position absolute
    bottom 0
    left 0
    width 100%
    padding 40px 0
    text-align center
    z-index 1

    .peek-dot
        display inline-block
        position relative
        width 12px
        height 12px
        margin 0 5px
        background-color black
        border-radius 50%
        cursor pointer
        transition transform 300ms ease-out

        &::before,
        &::after
            content ''
            display block
            position absolute
            top 10%
            width 80%
            height 80%
            left 10%
            background-color white
            border-radius 50%

        &.dot-current
            transform scale(1.4)

.slide-btn-nav
    position absolute
    width 100%
    height calc(100% - 80px)
    top 40px

    a
        display block
        position absolute
        top calc(50% - 40px)
        width 80px
        height 80px
        border-radius 50%
        background pink
        cursor pointer

        &::before,
        &::after
            content ''
            display block
            position absolute

            width 20px
            height 4px
            background-color white

        &.prev-btn
            left -40px

            &::before,
            &::after
                left calc(50% + 5px)

            &::before
                top calc(50% - 8px)
                transform rotate(-45deg)

            &::after
                top calc(50% + 4px)
                transform rotate(45deg)

        &.next-btn
            right -40px

            &::before,
            &::after
                right calc(50% + 5px)

            &::before
                top calc(50% - 8px)
                transform rotate(45deg)

            &::after
                top calc(50% + 4px)
                transform rotate(-45deg)


.selected
    transform translateX(0)
